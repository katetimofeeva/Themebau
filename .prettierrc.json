{
  "editor.formatOnSave": true,
  "tabWidth": 4,
  "semi": false,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "ignore",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "tabWidth": 4
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "tabWidth": 4
      }
    }
  ],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.associations": {
    "*.html": "html"
  }
}
